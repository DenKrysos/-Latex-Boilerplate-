{
	"files.exclude": {
		//"**/.0build": true,
		"*.project": true,
		"**/.externalToolBuilders": true,
		"**/.settings": true,
		"**/.texlipse": true
	},
	"latex-workshop.latex.tools": [
		{
			"name": "latexmk_plain",
			"command": "latexmk",
			"args": [
			]
		},
		{
			"name": "latexmk",
			"command": "latexmk",
			"args": [
				"-synctex=1",
				"-interaction=nonstopmode",
				"-file-line-error",
				"-pdf",
				"-outdir=%OUTDIR%",
				"%DOC%"
			]
		},
		{
			"name": "pdflatex",
			"command": "pdflatex",
			"args": [
				"-synctex=1",
				"-interaction=nonstopmode",
				"-file-line-error",
				"%DOC%"
			]
		},
		{
			"name": "xelatex",
			"command": "xelatex",
			"args": [
				"-synctex=1",
				"-interaction=nonstopmode",
				"-file-line-error",
				"%DOC%"
			]
		},
		{
			"name": "bibtex",
			"command": "bibtex",
			"args": [
				"%DOCFILE%"
			]
		},
		{
			"name": "biber",
			"command": "biber",
			"args": [
				"%DOCFILE%"
			]
		}
	],
	"latex-workshop.latex.recipes": [
		{
			"name": "latexmk_plain",
			"tools": [
				"latexmk_plain",
			]
		}
	],
	"latex-workshop.latex.external.build.command": "latexmk",
	//The directory, where the Extension searches for created files
	"latex-workshop.latex.outDir": "%WORKSPACE_FOLDER%\\.2out_final",// "%DIR%/../.2out_final"
	//Don't build PDF on saving a file (but instead on user trigger)
	"latex-workshop.latex.autoBuild.run": "never",
	"latex-workshop.latex.autoClean.run": "never",
	// Fix citation warnings in editor when using biber (wavy lines).
	"latex-workshop.intellisense.citation.backend": "biblatex",
	// Set bibliography indentation to four spaces (default: two).
	"latex-workshop.bibtex-format.tab": "4 spaces",
	// Automatically choose last used recipe on next build.
	"latex-workshop.latex.recipe.default": "lastUsed",
	"latex-workshop.latex.build.clearLog.everyRecipeStep.enabled": false,
	"editor.wordWrap": "on",
	"latex-workshop.latex.rootFile.indicator": "\\begin{document}",
	"latex-workshop.latex.clean.args": [
		"-c",
	],
	"latex-workshop.latex.clean.subfolder.enabled": true,
	//=========================================
	// In case, you are using a 'Workspace', the settings below must be applied in the '.code-workspace'-File (for whatever reason -.- ...)
	// When directly opening the Workspace-Directory, it uses the Settings from here...
	//=========================================
	// Sync PDF with cursor position after compiling.
	"latex-workshop.synctex.afterBuild.enabled": false,
	"latex-workshop.view.pdf.viewer": "external",
	"latex-workshop.view.pdf.ref.viewer": "auto",
	// External Viewer is opened with "Ctrl + Alt + v"
	"latex-workshop.view.pdf.external.viewer.command": "C:\\Program Files\\SumatraPDF\\SumatraPDF.exe",
	"latex-workshop.view.pdf.external.viewer.args": [
		"-reuse-instance",
		"-forward-search",
		"%TEX%",
		"%LINE%",
		"%PDF%"
		//"%OUTDIR%\\1main.pdf"
	],
	// Forward Search with External Viewer is done with "Ctrl + Alt + j"
	"latex-workshop.view.pdf.external.synctex.command": "C:\\Program Files\\SumatraPDF\\SumatraPDF.exe",
	"latex-workshop.view.pdf.external.synctex.args": [
		"-reuse-instance",
		"-forward-search",
		"%TEX%",
		"%LINE%",
		"%PDF%"
		//"%OUTDIR%\\1main.pdf"
	],
}
